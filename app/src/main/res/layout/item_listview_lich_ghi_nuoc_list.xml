<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/layout_10"
    android:paddingRight="@dimen/layout_10"
    android:paddingTop="@dimen/layout_20"
    android:paddingBottom="@dimen/layout_20">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/layout_15"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/id_tv_idkh_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="- IDKH:"
            android:textColor="@color/header"
            android:textSize="@dimen/textSize35" />
        <TextView
            android:id="@+id/id_tv_ngay_ghi_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/lichghinuoc_ngay_ghi"
            android:textColor="@color/header"
            android:textSize="@dimen/textSize35" />

        <TextView
            android:id="@+id/id_tv_thang_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/lichghinuoc_thang"
            android:textColor="@color/header"
            android:visibility="gone"
            android:textSize="@dimen/textSize35" />

        <TextView
            android:id="@+id/id_tv_nam_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/lichghinuoc_nam"
            android:visibility="gone"
            android:textColor="@color/header"
            android:textSize="@dimen/textSize35" />

        <TextView
            android:id="@+id/id_tv_ky_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/lichghinuoc_ky"
            android:textColor="@color/header"
            android:textSize="@dimen/textSize35" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/layout_30"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/id_tv_idkh_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="IDKH"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize35" />
        <TextView
            android:id="@+id/id_tv_ngay_ghi_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/lichghinuoc_ngay_ghi"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize35" />

        <TextView
            android:id="@+id/id_tv_thang_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:visibility="gone"
            android:text="@string/lichghinuoc_thang"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize35" />

        <TextView
            android:id="@+id/id_tv_nam_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/lichghinuoc_nam"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize35" />

        <TextView
            android:id="@+id/id_tv_ky_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/lichghinuoc_ky"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize35" />
    </LinearLayout>
</LinearLayout>