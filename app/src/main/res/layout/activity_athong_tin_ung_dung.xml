<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_fr_tab_ttud"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical">

        <include layout="@layout/header_title" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="bottom|center"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bg_white"
                android:layout_margin="@dimen/layout_20"
                android:padding="@dimen/layout_40"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/layout_225"
                    android:layout_height="@dimen/layout_225"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_launcher512" />
                <TextView
                    android:id="@+id/id_tv_ungdung"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="@dimen/layout_25"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="@dimen/textSize35"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/id_tv_hdh"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="@dimen/textSize35"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/id_tv_phienban"
                    android:layout_width="fill_parent"
                    android:text="@string/app_name"
                    android:textSize="@dimen/textSize35"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>
                <Button
                    android:id="@+id/id_btn_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ttud_ktcapnhat"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/layout_35"
                    android:textColor="@color/white"
                    android:padding="@dimen/layout_10"
                    android:textAllCaps="false"
                    android:background="@drawable/border_bg_default"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>