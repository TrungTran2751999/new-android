                            android:layout_centerInParent="true"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_next" />
                    </RelativeLayout>

                </LinearLayout>
                <!--************-->
                <TextView
