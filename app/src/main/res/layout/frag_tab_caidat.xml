                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="@string/tab_caidat_ttkh"
                    android:textAllCaps="false"
                    android:textColor="@color/header"
                    android:textSize="@dimen/textSize55" />

                <LinearLayout
                    android:id="@+id/id_ly_thongtinchung"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/layout_30"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:padding="@dimen/layout_15">

                    <ImageView
                        android:layout_width="@dimen/layout_160"
                        android:layout_height="@dimen/layout_160"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/thongtinchung" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/layout_40"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:text="@string/tab_caidat_ttchung"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize55" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/layout_75"
                            android:layout_height="@dimen/layout_75"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_next" />
                    </RelativeLayout>

                </LinearLayout>

