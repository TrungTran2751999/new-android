<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_135"
    android:id="@+id/id_ly_footer"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center">
    <ProgressBar
        android:id="@+id/id_prgbar_loading_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/id_tv_loading_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:text="@string/loadmore"
        android:layout_marginLeft="@dimen/layout_35"
        android:textSize="@dimen/layout_35"
        android:textStyle="bold"
        />
</LinearLayout>
