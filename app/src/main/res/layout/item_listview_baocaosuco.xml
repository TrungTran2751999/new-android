<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:background="@color/grey_transparent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/id_ly_a1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_20"
        android:layout_marginBottom="@dimen/layout_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_img_sc"
            android:layout_width="@dimen/layout_320"
            android:layout_height="@dimen/layout_400"
            android:scaleType="fitCenter"
            android:src="@drawable/no_img" />

        <LinearLayout
            android:id="@+id/id_ly_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">
                <Button
                    android:id="@+id/id_btn_takephoto"
                    android:layout_width="@dimen/layout_140"
                    android:layout_height="@dimen/layout_140"
                    android:layout_marginRight="@dimen/layout_25"
                    android:background="@android:drawable/ic_menu_camera" />

                <Button
                    android:id="@+id/id_btn_gallary"
                    android:layout_width="@dimen/layout_140"
                    android:layout_height="@dimen/layout_140"
                    android:layout_marginRight="@dimen/layout_25"
                    android:background="@android:drawable/ic_menu_gallery" />

                <Button
                    android:id="@+id/id_btn_cancel"
                    android:layout_width="@dimen/layout_140"
                    android:layout_height="@dimen/layout_140"
                    android:background="@android:drawable/ic_delete" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>