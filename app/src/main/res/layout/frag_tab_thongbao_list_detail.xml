<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_fr_tab_thongbao_list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_tab"
        android:orientation="vertical">

        <include layout="@layout/header_title" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/layout_10"
                android:scrollbars="none"
                android:fillViewport="false">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:gravity="top|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cropToPadding="true"
                        android:src="@drawable/slogan"
                        app:srcCompat="@drawable/slogan" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:rotation="0">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/id_title_thong_bao"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="#090909"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/id_content_no_format"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#101010"
                            android:visibility="gone"
                            tools:visibility="gone" />

                        <TextView
                            android:id="@+id/id_tv_content_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:id="@+id/layout_TNCN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:orientation="vertical"
                            android:visibility="gone"
                            tools:visibility="gone">

                            <LinearLayout
                                android:id="@+id/layout_thoi_gian"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/label_thoi_gian"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.1"
                                    android:text="Thời gian:"
                                    android:textColor="#0E0E0E" />

                                <TextView
                                    android:id="@+id/id_thoi_gian"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="TextView"
                                    android:textColor="#101010"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_ly_do"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/label_ly_do"
                                    android:layout_width="64dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.1"
                                    android:text="Lý do:"
                                    android:textColor="#101010" />

                                <TextView
                                    android:id="@+id/id_ly_do"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="TextView"
                                    android:textColor="#101010"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_BTN"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:visibility="gone"
                            tools:visibility="gone">

                            <LinearLayout
                                android:id="@+id/layout_ma_kh"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/label_ma_kh"
                                    android:layout_width="133dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.1"
                                    android:text="Mã khách hàng: "
                                    android:textColor="#101010" />

                                <TextView
                                    android:id="@+id/id_ma_kh"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="TextView"
                                    android:textColor="#101010"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_so_tien"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/label_so_tiens"
                                    android:layout_width="134dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.1"
                                    android:text="Số tiền:"
                                    android:textColor="#101010" />

                                <TextView
                                    android:id="@+id/id_so_tiens"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="TextView"
                                    android:textColor="#101010"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_chi_so_moi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/label_chi_so_moi"
                                    android:layout_width="134dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.1"
                                    android:text="Đã tiêu thụ:"
                                    android:textColor="#101010" />

                                <TextView
                                    android:id="@+id/id_chi_so_moi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="TextView"
                                    android:textColor="#101010"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_dia_chi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/label_dia_chi"
                                    android:layout_width="134dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.1"
                                    android:text="Địa chỉ:"
                                    android:textColor="#101010" />

                                <TextView
                                    android:id="@+id/id_dia_chi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="TextView"
                                    android:textColor="#101010"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_XNTT"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            tools:visibility="gone">

                            <TextView
                                android:id="@+id/label_so_tien_tt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:text="Số tiền:"
                                android:textColor="#101010" />

                            <TextView
                                android:id="@+id/id_so_tien_tt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TextView"
                                android:textColor="#101010"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1" />

                        <TextView
                            android:id="@+id/id_footer_thong_bao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:textAlignment="center"
                            android:textColor="@color/black" />

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="@string/app_name"
                android:textColor="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/top_bar_two_button"
            android:layout_gravity="center_vertical"
            android:background="@color/header"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:padding="@dimen/layout_10"
            android:orientation="horizontal">
            <Button
                android:id="@+id/id_btn_camera"
                android:layout_width="@dimen/layout_125"
                android:layout_height="@dimen/layout_125"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@drawable/ic_camera"/>
            <EditText
                android:id="@+id/id_edt_content"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_marginLeft="@dimen/layout_10"
                android:layout_marginRight="@dimen/layout_10"
                android:background="@color/white"
                android:layout_height="@dimen/layout_125" />
            <Button
                android:id="@+id/id_btn_send"
                android:layout_width="@dimen/layout_125"
                android:layout_height="@dimen/layout_125"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@drawable/ic_send"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>