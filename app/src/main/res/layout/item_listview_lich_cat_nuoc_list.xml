<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_margin="@dimen/layout_30"
    android:background="@drawable/border_bg_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/layout_10">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/layout_15"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_tv_ID_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/lichcat_nuoc_id"
            android:textColor="@color/header"
            android:textSize="@dimen/textSize35" />

        <TextView
            android:id="@+id/id_tv_ma_lo_trinh_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/lichcat_nuoc_malotrinh"
            android:textColor="@color/header"
            android:textSize="@dimen/textSize35" />

        <TextView
            android:id="@+id/id_tv_makv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/lichcat_nuoc_makv"
            android:textColor="@color/header"
            android:textSize="@dimen/textSize35" />

        <TextView
            android:id="@+id/id_tv_NgayBatDau_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/lichcat_nuoc_ngaybatdau"
            android:textColor="@color/header"
            android:textSize="@dimen/textSize35" />

        <TextView
            android:id="@+id/id_tv_GioBatDau_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/lichcat_nuoc_giobatdau"
            android:textColor="@color/header"
            android:textSize="@dimen/textSize35" />

        <TextView
            android:id="@+id/id_tv_PhutBatDau_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/lichcat_nuoc_phutbatdau"
            android:textColor="@color/header"
            android:textSize="@dimen/textSize35" />

        <TextView
            android:id="@+id/id_tv_NgayKetThuc_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/lichcat_nuoc_ngayketthuc"
            android:textColor="@color/header"
            android:textSize="@dimen/textSize35" />

        <TextView
            android:id="@+id/id_tv_GioKetThuc_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/lichcat_nuoc_gioketthuc"
