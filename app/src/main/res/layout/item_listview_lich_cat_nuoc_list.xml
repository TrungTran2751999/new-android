            android:lines="1"
            android:text="@string/lichcat_nuoc_phutbatdau"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize35" />

        <TextView
            android:id="@+id/id_tv_NgayKetThuc_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/lichcat_nuoc_ngayketthuc"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize35" />

        <TextView
            android:id="@+id/id_tv_GioKetThuc_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/lichcat_nuoc_gioketthuc"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize35" />

        <TextView
            android:id="@+id/id_tv_PhutKetThuc_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/lichcat_nuoc_phutketthuc"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize35" />

        <TextView
            android:id="@+id/id_tv_LyDo_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/lichcat_nuoc_lydo"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize35" />
    </LinearLayout>
</LinearLayout>