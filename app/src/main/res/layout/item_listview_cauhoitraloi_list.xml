<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_margin="@dimen/layout_30"
    android:background="@drawable/border_bg_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/layout_10">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/layout_15"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/tab_dichvu_cauhoi_tieudetrich"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/header"
            android:textSize="@dimen/textSize35" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:visibility="gone"
            android:text="@string/tab_dichvu_cauhoi_noidungtrich"
            android:textColor="@color/header"
            android:textSize="@dimen/textSize35" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/layout_30"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_tv_cauhoi_tieude"
            android:layout_width="fill_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:lines="1"

            android:text="@string/tab_dichvu_cauhoi_tieudetrich"
            android:textColor="@color/header"
            android:textSize="@dimen/textSize35" />

        <TextView
            android:id="@+id/id_tv_cauhoi_noidung"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/tab_dichvu_cauhoi_noidungtrich"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize35" />
    </LinearLayout>
</LinearLayout>