<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/id_title_dialog_loai_suco"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="Ðề nghị Công ty Cổ phần Cấp nước Thừa Thiên Huế:"
            android:textColor="#131313"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/rdbThay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thay" />

            <CheckBox
                android:id="@+id/rdbKiemTra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kiểm tra" />

            <CheckBox
                android:id="@+id/rdbKiemDinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kiểm định" />

            <CheckBox
                android:id="@+id/rdbNangHa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nâng (hạ)" />

            <LinearLayout
                android:id="@+id/layout_edt_nang_ha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:id="@+id/edt_nang_ha"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="m"
                    android:textColor="#090909"
                    android:textStyle="bold" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/rdbDoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dời" />

            <LinearLayout
                android:id="@+id/layout_edt_doi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:id="@+id/edt_doi"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="m"
                    android:textColor="#090909"
                    android:textStyle="bold" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/rdbDoTim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dò tìm" />

            <Button
                android:id="@+id/btn_loai_suco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="Xác nhận" />

        </RadioGroup>

    </LinearLayout>

</FrameLayout>